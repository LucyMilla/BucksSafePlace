@model BucksSafePlaceSite2.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
}



@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2 style="color:orange"> Roles options </h2>
    <hr />

    @Html.ValidationSummary("", new { @class = "Text-danger" })
    <div class="form-group">
        @Html.Label("Select Email", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Select User Type", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>

    <!--End here -->

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

